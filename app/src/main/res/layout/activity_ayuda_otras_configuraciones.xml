<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Uso de otras configuraciones"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="¿Para que sirven?"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Sirven para editar ciertas características para todos los botones, como por ejemplo la conexión Bluetooth"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Seguir los siguientes pasos para editar las configuraciones de los botones: "
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="368dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="   1. Se abre la aplicación; seleccionar 'Otras Configuraciones'"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"/>/>

        <ImageView
            android:layout_width="163dp"
            android:layout_height="283dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/movil13"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="368dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="   2. Se abrirá la pestaña con las configuraciones; una vez terminado de editarlas dar a 'Guardar'"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"/>/>

        <ImageView
            android:layout_width="163dp"
            android:layout_height="283dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/movil14"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>