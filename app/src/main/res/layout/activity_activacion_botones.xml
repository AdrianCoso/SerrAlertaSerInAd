<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ayuda.AyudaUtilidadesBotones">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Activar y desactivar botones"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Para que una alarma sea funcional debe estar activa; para activarla simplemente seguir los pasos: "
            android:textSize="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="368dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="   1. Se abre la aplicación; seleccionar 'Mis botones'"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"/>/>

        <ImageView
            android:layout_width="163dp"
            android:layout_height="283dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/movil"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="379dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="   2. Se muestra el listado con los botones creados por el usuario. Para activar un botón pulsar el deslizable que se encuentra en la parte superior derecha de cada botón."
            android:textSize="15dp"
            android:layout_marginLeft="25dp"/>

        <ImageView
            android:layout_width="163dp"
            android:layout_height="283dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/movil10"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="386dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:text="   Posteriormente a eso, el botón se encontrará activo"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="163dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/movil11"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="386dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="155dp"
            android:text="(Botón Inactivo)"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="163dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/movil12" />

        <TextView
            android:layout_width="386dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="155dp"
            android:text="(Botón Activo)"
            android:textSize="15dp" />
    </LinearLayout>

</ScrollView>